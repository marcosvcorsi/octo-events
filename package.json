{
  "name": "octo-events",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "clean": "npx rimraf dist",
    "build": "npm run clean && npx tsc -p tsconfig.build.json",
    "start": "node dist/main/server.js",
    "dev": "npx tsnd --inspect --transpile-only --exit-child --ignore-watch node_modules src/main/server.ts | pino-pretty -l -c -i pid,hostname",
    "lint": "npx eslint ./**/*.ts",
    "lint:fix": "npm run lint -- --fix",
    "test": "npx jest --passWithNoTests --no-cache --runInBand",
    "test:watch": "npm t -- --watch",
    "test:staged": "npm t -- --findRelatedTests",
    "test:coverage": "npm t -- --coverage",
    "pretest:integration": "npm run test:db:up && npm run test:db:migrate",
    "test:integration": "npm t -- -c ./jest.integration.config.js",
    "posttest:integration": "npm run test:db:down",
    "test:db:up": "docker-compose -f docker-compose.test.yml up -d",
    "test:db:migrate": "dotenv -e .env.test -- npx prisma migrate deploy",
    "test:db:down": "docker-compose -f docker-compose.test.yml down",
    "prepare": "husky install"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^16.1.0",
    "@commitlint/config-conventional": "^16.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.0",
    "@types/module-alias": "^2.0.1",
    "@types/node": "^17.0.16",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "dotenv-cli": "^5.0.0",
    "eslint": "^8.8.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-import-helpers": "^1.2.1",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.0",
    "jest": "^27.5.0",
    "jest-mock-extended": "^2.0.4",
    "lint-staged": "^12.3.3",
    "pino-pretty": "^7.5.1",
    "prettier": "^2.5.1",
    "prisma": "^3.9.1",
    "rimraf": "^3.0.2",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.3",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "@prisma/client": "^3.9.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.17.2",
    "module-alias": "^2.2.2",
    "pino": "^7.6.5",
    "reflect-metadata": "^0.1.13",
    "tsyringe": "^4.6.0"
  }
}
